    <select id="getMenusByHrId" parameterType="java.util.Map" resultMap="treeMap">
        select
         m1.`id`,
         m1.`path`,
         m1.`component`,
         m1.`iconCls`,
         m1.`name`,
         m1.`requireAuth`,
         m2.`component` AS component2,
         m2.`iconCls` AS iconCls2,
         m2.`keepAlive` AS keepAlive2,
         m2.`name` AS name2,
         m2.`path` AS path2,
         m2.`requireAuth` AS requireAuth2
         from menu m1,menu m2
         where m1.`id`=m2.`parentId` and m1.`id`!=1 and m2.`id` in(
          SELECT  t3.mid FROM hr_role t1
          LEFT JOIN role t2 on t1.rid=t2.id
          LEFT JOIN menu_role t3 on t2.id=t3.rid=t2.id
          <where>
              <if test="hrId!=null and hrId!=''">
                  t1.hrid=#{hrId}
              </if>
          </where>
         ) and m2.`enabled`=true
          order by m1.`id`,m2.`id`
    </select>
